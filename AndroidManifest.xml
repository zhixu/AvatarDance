<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.avatardance"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="20" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.live2d.avatardance.DanceActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.live2d.avatardance.PlaylistActivity"
            android:label="@string/title_activity_playlist" >
        </activity>
        <activity
            android:name="com.live2d.avatardance.SonglistActivity"
            android:label="@string/title_activity_songlist" >
        </activity>
        <activity
            android:name="com.live2d.avatardance.CreditsActivity"
            android:label="@string/title_activity_credits" >
        </activity>
    </application>

</manifest>
